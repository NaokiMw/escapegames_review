<h3>ユーザー新規作成</h3>
 
<%= form_with model: @review do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"title" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <div class="form-group row" id="star">
        <th><%= f.label :review_1,'総合評価', class:'col-md-3 col-form-label' %><th>
        <td><%= f.hidden_field :review_1, id: :review_star %></td>
      </div>
    </tr>

    <tr>
      <div class="form-group row" id="star">
        <th><%= f.label :review_2,'ストーリー', class:'col-md-3 col-form-label' %><th>
        <td><%= f.hidden_field :review_2, id: :review_star %></td>
      </div>
    </tr>

    <tr>
      <div class="form-group row" id="star">
        <th><%= f.label :review_3,'満足度', class:'col-md-3 col-form-label' %><th>
        <td><%= f.hidden_field :review_3, id: :review_star %></td>
      </div>
    </tr>

    <tr>
      <div class="form-group row" id="star">
        <th><%= f.label :review_4,'ひらめき力', class:'col-md-3 col-form-label' %><th>
        <td><%= f.hidden_field :review_4, id: :review_star %></td>
      </div>
    </tr>

    <tr>
      <div class="form-group row" id="star">
        <th><%= f.label :review_5,'ひらめき力', class:'col-md-3 col-form-label' %><th>
        <td><%= f.hidden_field :review_5, id: :review_star %></td>
      </div>
    </tr>

    <tr>
      <th><%= f.label :place ,"place" %></th>
      <td><%= f.text_field :place %></td>
    </tr>

    <tr>
      <th><%= f.label :play_day ,"遊んだ日" %></th>
      <td><%= f.date_field :play_day %></td>
    </tr>

    <tr>
      <th><%= f.label :start_time ,"開始時間" %></th>
      <td><%= f.date_field :start_time %></td>
    </tr>

    <tr>
      <th><%= f.label :result ,"成功" %></th>
      <td><%= f.radio_button :result, true %></td>
      <th><%= f.label :result ,"失敗" %></th>
      <td><%= f.radio_button :result, false %></td>
    </tr>


  </table>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "イベント情報一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>
