<h3>日記新規作成</h3>
 
<%= form_with model: @diary do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :play_day ,"遊んだ日" %></th>
      <td><%= f.date_field :play_day %></td>
    </tr>

    <tr>
      <th><%= f.label :start_time ,"開始時間" %></th>
      <td><%= f.time_field :start_time %></td>
    </tr>

    <tr>
      <th>脱出</th><td></td>
      <th><%= f.label :result ,"成功" %></th>
      <td><%= f.radio_button :result, true, checked: true %></td>
      <th><%= f.label :result ,"失敗" %></th>
      <td><%= f.radio_button :result, false %></td>
    </tr>

    <tr>
      <th><%= f.label :description ,"日記" %></th>
      <td><%= f.text_area :description %></td>
    </tr>

    <tr>
      <th><%= f.label :status ,"状態" %></th>
      <td><%= f.select :status, Diary.statuses.keys.to_a, {}, { class:'item-open' } %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "日記の一覧に戻る", :diaries %></li>
    </ul>
  </div>
<% end %>
