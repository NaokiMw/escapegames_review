<% if user_signed_in? %>
  <div class="d-flex flex-column align-items-stretch bg-white" style="width: 100%;">
    <%= link_to "新しい日記作成", new_diary_path, class: "btn btn-warning fs-5 fw-semibold mt-2 text-white" %>
    <a href="/diaries" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
      <svg class="bi me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-5 fw-semibold">公開中の日記一覧</span>
    </a>
    
    <% @published_diaries.each do |diary| %>
      <div class="list-group list-group-flush border-bottom scrollarea">
        <%= link_to diary_path(diary.id), class: "list-group-item list-group-item-action py-3 lh-sm" do %>
          <div class="d-flex w-100 align-items-center justify-content-between">
            <strong class="mb-1"><%= diary.title %></strong>
            <small class="text-muted"><%= l diary.created_at %></small>
          </div>
          <div class="col-10 mb-1 small">
            <%= l diary.play_day, format: :short %>
            <%= l diary.start_time, format: :short %>に開始したゲーム
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex flex-column align-items-stretch bg-white" style="width: 100%;">
    <a href="/diaries" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
      <svg class="bi me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-5 fw-semibold">非公開の日記一覧</span>
    </a>
    <% @draft_diaries.each do |diary| %>
      <div class="list-group list-group-flush border-bottom scrollarea">
        <%= link_to diary_path(diary.id), class: "list-group-item list-group-item-action py-3 lh-sm" do %>
          <div class="d-flex w-100 align-items-center justify-content-between">
            <strong class="mb-1"><%= diary.title %></strong>
            <small class="text-muted"><%= l diary.created_at %></small>
          </div>
          <div class="col-10 mb-1 small">
            <%= l diary.play_day, format: :short %>
            <%= l diary.start_time, format: :short %>に開始したゲーム
            脱出<%= diary.result ? '成功' : '失敗' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="d-flex flex-column align-items-stretch bg-white" style="width: 100%;">
    <a href="/diaries" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
      <svg class="bi me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-5 fw-semibold">フォロワーの日記一覧</span>
    </a>
    <% @follow_diaries.each do |diary| %>
      <div class="list-group list-group-flush border-bottom scrollarea">
        <%= link_to diary_path(diary.id), class: "list-group-item list-group-item-action py-3 lh-sm" do %>
          <div class="d-flex w-100 align-items-center justify-content-between">
            <strong class="mb-1"><%= diary.title %></strong>
            <small class="text-muted"><%= l diary.created_at %></small>
          </div>
          <div class="col-10 mb-1 small">
            <%= l diary.play_day, format: :short %>
            <%= l diary.start_time, format: :short %>に開始したゲーム
            脱出<%= diary.result ? '成功' : '失敗' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>日記をご覧頂けません</p>
<% end %>

