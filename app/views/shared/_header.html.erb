<header class="p-3 text-bg-dark bg-warning">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start" >
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 text-secondary">ホーム</a></li>
          <li><a href="#" class="nav-link px-2 text-white">謎レビュとは</a></li>
          <li><a href="/reviews" class="nav-link px-2 text-white">レビュー</a></li>
          <% if user_signed_in? %>
          <li><a href="/mypage" class="nav-link px-2 text-white">マイページ</a></li>
          <li><a href="/diaries" class="nav-link px-2 text-white">日記</a></li>
          <% end %>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <%= render "shared/search" %>
        </form>

        <div class="text-end">
          <% if user_signed_in? %>
            <%= link_to "ログアウト", destroy_user_session_path(current_user), method: :delete, class: 'btn btn-outline-light me-2' %>
          <% else %>
            <%= link_to "ログイン", user_session_path, class: 'btn btn-outline-light me-2' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-warning' %>
          <% end %>
        </div>
      </div>
    </div>
  </header>
