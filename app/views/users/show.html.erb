<h1>プロフィール画面</h1>
<p>名前 : <%= @user.username %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% @reviews.each do |review| %>
    <hr>
    <p><span>自分のレビュー: </span><%=link_to review.title, review_path(review.id) %></p>
  <% end %>
  <!-- 追加 -->
  <% @favorite_reviews.each do |review| %>
    <hr>
    <p><span>お気に入りのレビュー: </span><%=link_to review.title, review_path(review.id) %></p>
  <% end %>
