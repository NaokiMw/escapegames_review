<div class="container border border-5 border-warning  bg-white rounded mx-md-5">
  <div class="row"> 
    <div class="col-md-6 offset-md-3">
      <h2 class="text-decoration-underline mt-3">新規登録</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <form class="form-horizontal">
      <div class="row">
        <div class="col-md-6 offset-md-3 field form-group w-50 mt-5">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 offset-md-3 field form-group w-50 mt-5">
          <%= f.label :username, class: "form-label" %><br />
          <%= f.text_field :username, class: "form-control", class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 offset-md-3 field form-group w-50 mt-5">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="row actions mt-2">
        <div class="col-md-6 offset-md-3">
          <%= f.submit "新規登録", class: "btn btn-outline-warning col-md-6 offset-md-3" %>
        </div>
      </div>
    </form>
  <% end %>
  <div class="row mt-3 mb-5">
    <div class="col-md-6 offset-md-3">
      <%= button_to 'ゲストログイン', users_guest_sign_in_path, class: 'btn btn-outline-warning col-md-6 offset-md-3', method: :post %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
